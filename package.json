{
  "name": "ember-lifeline-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm-run-all build:ts build:docs",
    "build:ts": "yarn workspace ember-lifeline prepare",
    "build:docs": "documentation build --document-exported \"packages/ember-lifeline/lib/index.js\" --document-exported \"packages/ember-lifeline/lib/test-support/index.js\" --config documentation.yml -f md -o API.md && prettier --single-quote --trailing-comma es5 --write API.md",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --ext js,ts --cache",
    "lint:js:fix": "eslint . --ext js,ts --fix",
    "prepublishOnly": "ember ts:precompile",
    "postpublish": "ember ts:clean",
    "start": "ember serve",
    "test": "npm-run-all lint test:*",
    "test:ember": "yarn workspace test-app test:ember",
    "test:ember-compatibility": "yarn workspace test-app test:ember-compatibility"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json,{app,addon,config,tests}/**/*.{ts,js,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "documentation": "^13.0.2",
    "ember-template-lint": "^3.2.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-ember": "^10.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-qunit": "^6.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "release-it": "^14.0.3",
    "release-it-lerna-changelog": "^3.1.0"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "node": "12.22.1",
    "yarn": "1.22.10"
  }
}
